<div class="container">
  <h1 class="login-title">Clever thing that changes</h1>
  <h4><%= @user.email %></h4>

  <section>
  <div class="order-container">
    <div class="order-container-content">
      <div>
        <div class="new-order-box-content">
          <button class="btn waves-effect waves-light black hidebutton new-order-button">+</button>
          <h4>Create a new order</h4>
        </div>
      </div>
    </div>

    <div class="order-container-content">
      <div>
        <div class="new-order-box-content">
          <button class="btn waves-effect waves-light black hidebutton new-order-button">+</button>
          <h4>Create a new order</h4>
        </div>
      </div>
    </div>
  </div>

  <!-- This is for order -->
  <div class="order-form-container">
    <div class="form">
        <form action="/orders" method='POST'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="field">
            <h4>Name </h4>
            <input type="text" name="name" value="">
          </div>
          <div class="field">
            <h4>Date Needed</h4>
            <input type="date" name="date">
          </div>
            <input type="hidden" name="complete" value="f">
          <div class="form-group field">
            <h4>Shipping</h4>
            <select name="shipping" class="form-control shipping-select" id="exampleFormControlSelect1">
              <option value="pick_up">Pick Up</option>
              <option value="shipping">Shipping</option>
            </select>
          </div>
      </div>
          <div class="shipping-field field">
            <h4 class="">Shipping Address</h4>
            <div class="row">
              <input type="text" name="contact_name" value="Contact Name">
              <input type="text" name="address" value="Address">
              <input type="text" name="state" value="State">
              <input type="text" name="zip_code" value="Zip code">
            </div>

          </div>
          <div class=" field">
            <input class="btn waves-effect waves-light black new-order-submit" type="submit">
          </div>
      </form>
  </div>
</section>




<hr>
<!-- this displays the orders created by the users -->
<div class="current-orders-container">
<h1>Current Orders</h1>
  <% @orders.each do |x| %>
  <% if x['complete'] == false %>
    <h3><%= x['name'] %></h3>
    complete<%= x['complete'] %>
    id <%= x['id'] %>
    user id<%= x['user_id'] %>
    <br>
    <a href='/orders/<%=x['id']%>/edit'>Confirm Order</a><br>
    <a href='/orders/<%=x['id']%>'>Add To Order</a><br>
    <%= link_to "Remove Order", x, method: :delete %>
  <% end %>

  <% end %>

</div>


<hr>
<!-- this displays the orders created by the users -->
<div class="past-orders-container">



<section>
<h1 class="login-tite">Previous Orders</h1>
<hr>
<div class="order-container">


    <% @orders.each do |x| %>

      <% if x.user_id == @user.id %>
      <% if x['complete'] == true %>
        <% if x['user_id'] == @currentUser %>

        <h3><%= x['name']%></h3>
        <h4><%= x['date']%></h4>
        <hr>

        <div class="order-container-content"><div class="previous-order-details-container">content1</div></div>

            <% @friends.each do |z| %>

              <% if @currentUser  == z.user_id %>
                <% if x.id == z.order_id %>
              <div class="order-container-content">
                <div>

                  <h4><%= z['shirt_name']%></h4>
                  <%= image_tag z.avatar.url(:medium), :class => "avatar-box" %>
                  <%= link_to 'Delete', z, confirm: 'Are you sure you want to lose a friend?', method: :delete, class: 'destroy' %>

                </div>
              </div>

              <% end %>
            <% end %>
          <% end %>
        <hr>
      <% end %>
      <% end %>
      <% end %>
    <% end %>

  </div>
</section>


<% @orders.each do |x| %>
<!-- matches user id and displays just their info -->
    <div class="field">
      <% if x.user_id == @user.id %>
      <% if x['complete'] == true %>
      <h3><%= x['name'] %></h3>
      complete<%= x['complete'] %>
      id <%= x['id'] %>
      user id<%= x['user_id'] %><br>
      <a href="/orders/<%= x['id'] %>">View Order Details</a><br>
      <%= link_to "Remove Order", x, method: :delete %>
    </div>

    <div class="field">
    </div>

    <!-- reorder -->
    <div class="form-a">
        <form action="/orders" method='POST'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <input type="hidden" name="name" value="<%= x['name'] %> Reorder">
          <input type="hidden" name="date" value="<%= x['date'] %>">
          <input type="hidden" name="shipping" value="<%= x['shipping'] %>">
