<%= form_for(Friend.new, multipart: true) do |f| %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div class="shirt_id">
    <%= f.label :shirt_id %>
    <%= f.text_field :shirt_id%>
  </div>
  <div class="order_id">
    <%= f.label :order_id %>
    <%= f.hidden_field :order_id%>
  </div>
  <div class="actions">
    <%= f.submit 'Make a friend' %>
    <%= link_to 'Nevermind', friends_path, class: 'button' %>
  </div>
<% end %>
